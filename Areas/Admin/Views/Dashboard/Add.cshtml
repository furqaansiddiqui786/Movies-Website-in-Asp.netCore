@model MoviesDB
@{
    ViewData["Title"] = "Add";
}

<div class="text-white">

    <h2>Add Movie</h2>
    <hr />

    <div>
        <form method="post" enctype="multipart/form-data" asp-action="Add">

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Name"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="About"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <textarea type="text" asp-for="About" class="form-control"></textarea>
                </div>
                <span asp-validation-for="About"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Category"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<MoviesDB.ECategory>()" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Director"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="Director" class="form-control" />
                </div>
                <span asp-validation-for="Director"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Actors"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="Actors" class="form-control" />
                </div>
                <span asp-validation-for="Actors"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Producer"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="Producer" class="form-control" />
                </div>
                <span asp-validation-for="Producer"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Watchtime"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="Watchtime" class="form-control" />
                </div>
                <span asp-validation-for="Watchtime"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Release"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="Release" class="form-control" />
                </div>
                <span asp-validation-for="Release"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Ratings"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <select asp-for="Ratings" asp-items="Html.GetEnumSelectList<MoviesDB.ERatings>()" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="Banner"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="file" name="files" id="Projectbanner" asp-for="Banner" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <h4>
                        <label asp-for="MovieLink"></label>
                    </h4>
                </div>
                <div class="col-md-7">
                    <input type="text" asp-for="MovieLink" class="form-control" />
                </div>
                <span asp-validation-for="MovieLink"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="btn btn-success form-control" type="submit">Add Movie</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin" class="btn btn-danger form-control">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

